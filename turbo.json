{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**", 
        ".next/**", 
        "!.next/cache/**", 
        "target/**", 
        "packages/server/dist/**", 
        "packages/client/dist/**", 
        "packages/worker/dist/**"
       ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build"]
    },
    "migrate": {
      "cache": false
    },
    "start-server": {
      "dependsOn": ["build"]
    }
  }
}