{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "bun install"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "bun run build:server"
      ]
    }
  },
  "deploy": {
    "aptPackages": [
      "fontconfig"
    ],
    "inputs": [
      "...",
      {
        "step": "build"
      }
    ],
    "startCommand": "bun run start:server"
  }
} 