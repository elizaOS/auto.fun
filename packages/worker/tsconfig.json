{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Worker-specific overrides and additions
    "outDir": "dist", // Matches the build script output
    "noEmit": false, // Allow tsc to typecheck/emit (though wrangler builds)
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext"], // Lib for modern JS
    "types": ["@cloudflare/workers-types"], // Crucial for CF worker APIs
    "baseUrl": ".",
    "paths": {
      // Add paths if you import helpers/shared code from other packages
      // Example: "@autodotfun/shared-types": ["../shared-types/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include TS and TSX files in src
  "exclude": ["node_modules", "dist", "tests"]
} 